<%= simple_form_for(@service) do |f| %>
  <%= f.error_notification %>

  <%= @service.errors.full_messages %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :service_type_id, collection: ServiceType.all,  include_blank: false, class: "form-control", selected: 1 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
