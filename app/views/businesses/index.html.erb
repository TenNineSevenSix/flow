<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1>Businesses</h1>

<table class="table-responsive table table-bordered table-inverse">
  <thead>
    <tr>
      <th>Expert's Name</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.user.profile.first_name%></td>
        <td><%= business.bio %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path %>
</div>
